{
  "name": "deck",
  "version": "1.0.0",
  "description": "-",
  "main": "./dist/main.js",
  "scripts": {
    "dev": "npm-run-all -p dev:server dev:react electron:serve",
    "dev:electron": "cross-env NODE_ENV=development webpack --config webpack/electron.webpack.js --mode development && electron .",
    "dev:react": "cross-env NODE_ENV=development webpack-dev-server --config webpack/react.webpack.js --mode development",
    "dev:server": "ts-node-dev --respawn --ignore-watch node_modules --no-notify server/server.ts",
    "electron:serve": "wait-on http-get://localhost:4000/ && npm run dev:electron",
    "build": "npm-run-all dist:electron dist:react && electron-builder",
    "build:electron": "electron-builder",
    "dist": "npm-run-all dist:electron dist:react && electron .",
    "dist:electron": "webpack --config webpack/electron.webpack.js",
    "dist:react": "webpack --config webpack/react.webpack.js",
    "test": "jest"
  },
  "build": {
    "appId": "com.electron.deck",
    "win": {
      "target": "NSIS"
    },
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "build/",
      "buildResources": "assets/"
    }
  },
  "keywords": [],
  "author": "Luiz Gustavo <iamtheluiz.dev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@testing-library/react": "^10.4.3",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/ip": "^1.1.0",
    "@types/jest": "^26.0.3",
    "@types/opener": "^1.4.0",
    "@types/qrcode.react": "^1.0.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-router-dom": "^5.1.5",
    "@types/socket.io": "^2.1.8",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.1",
    "eslint-plugin-standard": "^4.0.1",
    "html-webpack-plugin": "^4.2.0",
    "jest": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "ts-node-dev": "^1.0.0-pre.51",
    "typescript": "^3.9.5",
    "wait-on": "^5.0.1",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "ip": "^1.1.5",
    "opener": "^1.5.1",
    "qrcode.react": "^1.0.0",
    "react": "^16.13.1",
    "react-dnd": "^11.1.3",
    "react-dnd-html5-backend": "^11.1.3",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "react-router-dom": "^5.2.0",
    "robotjs": "^0.6.0",
    "socket.io": "^2.3.0",
    "styled-components": "^5.1.1"
  }
}
